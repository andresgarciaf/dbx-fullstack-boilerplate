[project]
name = "api"
version = "0.1.0"
description = "{{.project_name}} - FastAPI backend"
readme = "README.md"
requires-python = ">=3.10"
dependencies = [
    "databricks-sdk>=0.58.0,<0.59.0",
    "databricks-labs-lsql>=0.16.0,<0.17.0",
    "fastapi>=0.128.0",
    "pydantic-settings>=2.12.0",
    "uvicorn[standard]>=0.40.0",
]

[dependency-groups]
dev = [
    "pytest>=8.0.0",
    "pytest-asyncio>=0.23.0",
    "httpx>=0.27.0",
    "ruff>=0.11.0",
]

[build-system]
requires = ["uv_build>=0.9.26,<0.10.0"]
build-backend = "uv_build"

# ---------- Ruff ----------
[tool.ruff]
target-version = "py310"
line-length = 120
src = ["."]

[tool.ruff.lint]
select = [
    "E", "W",   # pycodestyle
    "F",         # pyflakes
    "I",         # isort
    "N",         # pep8-naming
    "UP",        # pyupgrade
    "B",         # flake8-bugbear
    "SIM",       # flake8-simplify
    "TCH",       # flake8-type-checking
    "RUF",       # ruff-specific
    "C4",        # flake8-comprehensions
    "T20",       # flake8-print
    "PIE",       # flake8-pie
    "PT",        # flake8-pytest-style
    "RET",       # flake8-return
    "TID",       # flake8-tidy-imports
]
ignore = ["E501"]  # formatter handles line length

[tool.ruff.lint.per-file-ignores]
"clients/lakebase_backends.py" = ["N806"]  # RowClass is conventional for class factories
"clients/sql_backends.py" = ["N806"]
"services/databricks_service.py" = ["B024"]  # ABC used as marker base class

[tool.ruff.lint.isort]
known-first-party = ["core", "clients", "routers", "services", "utils", "models"]

[tool.ruff.lint.flake8-tidy-imports]
ban-relative-imports = "all"

[tool.ruff.format]
quote-style = "double"
indent-style = "space"
