{
  "name": "{{.project_name}}",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "setup": "./scripts/setup.sh",
    "dev": "./scripts/dev.sh",
    "build": "./scripts/build.sh",
    "clean": "./scripts/clean.sh",
    "start": "cd src/api && uv run uvicorn src.api.main:app --host 0.0.0.0 --port 8000",
    "lint": "pnpm --filter @{{.project_name}}/web lint",
    "typecheck": "pnpm --filter @{{.project_name}}/web typecheck",
    "format": "pnpm --filter @{{.project_name}}/web format",
    "format:check": "pnpm --filter @{{.project_name}}/web format:check"
  }
}
